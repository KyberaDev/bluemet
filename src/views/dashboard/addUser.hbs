                  <label for="productName"
                    ><i class="fa-solid fa-user-gear"></i> Rol</label
                  >
                  <select name="TIPO_USUARIO" id="rolUsuario">
                    <option value="0" hidden>Seleccione un rol</option>
                    <option value="1">Administrador</option>
                    <option value="2">Gestor de Productos</option>
                  </select>
                </div>
                {{#if error}}
                  <p class="message">
                      <i class="fa-solid fa-circle-exclamation"></i>
                      {{error}}
                  </p>
                {{/if}}
                <button class="submit-button" type="submit">
                  <i class="fa-solid fa-person-circle-plus"></i> Agregar Usuario
                </button>
              </div>
            </div>
          </form>
        </div>
