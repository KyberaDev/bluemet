          <form action="/dashboard/addUser" method="post">
            <div class="form-container">
              <div class="form-body">
                <div class="form-item">
                  <label for="productName"
                    ><i class="fa-solid fa-file-signature"></i> Nombre Completo
                  </label>
                  <input type="text" name="NOMBRE" id="mailUsuario"/>
                </div>

                <div class="form-item">
                  <label for="productName"
                    ><i class="fa-solid fa-user"></i> Usuario
                  </label>
                  <input type="text" name="USUARIO" id="nombreUsuario"/>
                </div>

                <div class="form-item">
                  <label for="productName"
                    ><i class="fa-solid fa-file-signature"></i> Mail
                  </label>
                  <input type="text" name="MAIL" id="mailUsuario"/>
                </div>

                <div class="form-item">
                  <label for="productName"
